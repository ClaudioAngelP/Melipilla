    } 
    
    $fill=false;
      
    foreach($detalle as $art) {
    
$desp=cargar_registro("SELECT SUM(ABS(stock_cant)) AS total FROM recetas_detalle 
			JOIN logs ON log_recetad_id=recetad_id
			JOIN stock ON stock_log_id=log_id
