        $pdf->SetFont('','B',10);
        $pdf->Cell(25,4,'Indicaciones:','LR',0,'R',$fill);
        $pdf->SetFont('','',10);
        $pdf->Cell(98,4,$txt_dosis,'LR',1,'L',$fill);

        
        
        $indica=html_entity_decode(strip_tags($art['recetad_indicaciones']));
      
        if($indica!='') {
